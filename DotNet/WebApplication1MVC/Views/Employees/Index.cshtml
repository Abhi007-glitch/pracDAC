@model IEnumerable<WebApplication1MVC.Models.Employees> 
@* taking a Collection/Array of EMployees *@
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpNo)     @*   propertyName = EmpNo *@
          
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Base)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.EmpNo)   @*   property Value *@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Base)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.EmpNo }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EmpNo }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmpNo })
            </td>
        </tr>
}
    </tbody>
</table>
